<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_header_custom" inherit_id="report.external_layout_header">
            <xpath expr="//div[@class='header']" position="replace">
                <div class="header" style="text-transform:uppercase;">
                    <div class="row">
                        <div class="col-xs-3">
                            <img t-if="company.logo"
                            t-att-src="'data:image/png;base64,%s' % company.logo"
                            style="max-height: 45px;" />
                        </div>
                        <div class="col-xs-9 text-right" style="margin-top:20px;"
                        t-field="company.rml_header1" />
                    </div>
                    <div class="row zero_min_height">
                        <div class="col-xs-12">
                            <div style="border-bottom: 0px solid black;"></div>
                        </div>
                    </div>
                    <div class="row" style="background-color:#1F9CD9;background-image:url(http://ak7.picdn.net/shutterstock/videos/13505777/thumb/1.jpg);">
                        <div class="col-xs-6" name="company_address">
                            <span t-field="company.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                            style="border-bottom: 0px solid black; display:inline-block;" />
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
